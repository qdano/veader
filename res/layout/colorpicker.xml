<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/background"
    android:gravity="center" style="@style/Theme.Transparent" android:background="@drawable/transparent_background" android:layout_width="wrap_content" android:layout_height="wrap_content">
	
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/background"
	    >

		<com.android.ray.widget.ColorSlider
				android:id="@+id/saturation" 
				android:layout_width="50sp" 
				android:layout_height="fill_parent"
				android:layout_margin="5sp"
				/>
		<com.android.ray.widget.ColorCircle
			android:layout_weight="1"
				android:id="@+id/colorcircle"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:layout_margin="5sp"
				/>
		<com.android.ray.widget.ColorSlider
			android:id="@+id/value"
		    android:layout_width="50sp"
		    android:layout_height="fill_parent"
		    android:layout_margin="5sp"
			/>
	</LinearLayout>

<LinearLayout 	    android:orientation="vertical" android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:layout_height="wrap_content">
<TextView android:id="@+id/txtsamplefont" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="花花轎兒人抬人" android:textSize="22sp" android:background="@color/white"></TextView>
<TextView android:id="@+id/txtsamplefontb" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="花花轎兒人抬人" android:textSize="22sp" android:background="@color/black"></TextView></LinearLayout>

</LinearLayout>
