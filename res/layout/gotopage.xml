<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TextView android:layout_width="fill_parent"
	    android:minWidth="240dip"
	    android:text="@string/msg_pageseek"
		android:layout_height="fill_parent" android:gravity="center"
		android:textSize="16sp"  />
	<SeekBar android:id="@+id/page_seek"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_margin="10dip"
		android:max="255" />

<Button android:text="@string/strBtnGoto" android:id="@+id/btngotopage" android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>
<TextView android:text="" android:id="@+id/txtpageno" 
android:gravity="center"
		android:textSize="16sp" 

android:layout_width="fill_parent" android:layout_height="wrap_content"></TextView>
</LinearLayout>
		